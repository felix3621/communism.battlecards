[
    {
        "Text":"Oh Hello There!",
        "Sender":"Opponent",
        "GamePause": true,
        "Duration":3,
        "EnemyAi":false,
        "PlayerDeck": [{"Name":"Svæin","Description":"Trainer","Attack":2,"Health":2,"Cost":1,"Texture":"Svein"}],
        "CanEndTurn":false,
        "TimedPlay":false
    },
    {
        "Text":"Welcome To Battle Cards.<br>Let Me Show You Haw To Play.",
        "Sender":"Opponent",
        "GamePause": true,
        "Duration":5
    },
    {
        "Text":"Lets Start!",
        "Sender":"Opponent",
        "GamePause": true,
        "Duration":3,
        "Function":{"Function":"StartGame"}
    },
    {
        "Text":"First Things First. <br>Place Out A Card.",
        "Sender":"Opponent",
        "GamePause": false,
        "Duration":6,
        "Invoke":"GiveCard(PlayerHand,{Name:'Svæin',Description:'Trainer',Attack:2,Health:2,Cost:1,Texture:'Svein'})",
        "Objective":{"Title":"Place Card", "Description":"Drag Your Card Out To You Play Field.<br>(Right Above Your Avatar)", "CompletionTrigger":"PlayerOnField.length>0"}
    },
    {
        "Text":"Dide You See That It Used Up Some Energy When You Placed It Down (right Corner)",
        "Sender":"Opponent",
        "GamePause": true,
        "Duration":6,
        "UseAttackCooldown":false,
        "Function":{"Function":"ShowEnergy","Value":5}
    },
    {
        "Text":"Now Attack My Minion",
        "Sender":"Opponent",
        "GamePause": false,
        "Duration":5,
        "UseAttackCooldown":true,
        "Invoke":"EnemyOnField.push(new Stone({Attack:1,Health:2,Texture:'Goblin',New:true},document.getElementById('EnemyOnField'),'0'))",
        "Objective":{"Title":"Attack", "Description":"Hold Down On Your Placed Stone And Move The Target Indicator To The Goblin And Let Go.","CompletionTrigger":"EnemyOnField.length==0"}
    },
    {
        "Text":"Remember You Can Attack using Your Avatar",
        "Sender":"Opponent",
        "GamePause": true,
        "Duration":3,
        "UseAttackCooldown":false
    },
    {
        "Text":"Try To Kill My Second One. Look At It Being A Little Diffrent",
        "Sender":"Opponent",
        "GamePause": false,
        "Duration":3,
        "EnemyAi":false,
        "Invoke":"EnemyOnField.push(new Stone({Attack:1,Health:2,Texture:'Bloob',Type:'Tank',New:true},document.getElementById('EnemyOnField'),'0'))",
        "UseAttackCooldown": true,
        "Objective":{"Title":"Kill Minion", "Description":"Use Your Cards And Destroy Bloob.<br> The Shield Around the Bloob makes it take Half Damage","CompletionTrigger":"EnemyOnField.length==0"}
    },
    {
        "Text":"Dide You See That It Took Longer To Kill It Then Normall. <br>That Is Becuse It Hade That Shield On It.<br>Diffrent Card Have Diffrent Classes And This One Was A Tank.",
        "Sender":"Opponent",
        "GamePause": true,
        "Duration":5,
        "UseAttackCooldown": false,
        "EnemyAi":false
    },
    {
        "Text":"Now Attack Me Using Your Avatar And Minion. Butt I Will Fight Back So Be Aware",
        "Sender":"Opponent",
        "GamePause": false,
        "Duration":8,
        "EnemyAi":true,
        "Invoke":"GiveRandomCard(PlayerDeck,MaxEnergy,2,false); EnemyOnField.push(new Stone({Attack:1,Health:1,Texture:'PurpleSlime',New:true},document.getElementById('EnemyOnField'),'','','')); EnemyOnField.push(new Stone({Attack:1,Health:2,Texture:'Bandit',New:true},document.getElementById('EnemyOnField'),'','','')); EnemyOnField.push(new Stone({Attack:1,Health:1,Texture:'PurpleSlime',New:true},document.getElementById('EnemyOnField'),'','',''))",
        "UseAttackCooldown": true,
        "CanEndTurn":true,
        "TimedPlay":true,
        "Objective":{"Title":"Kill Runar", "Description":"Use Your Cards And Kill His Minions To Then Kill Runar<br>End Your Turn When You Cant Attack Any More","CompletionTrigger":"EnemyAvatar.Card.Health<=4"}
    },
    {
        "Text":"Och",
        "Sender":"Opponent",
        "Duration":4,
        "Objective":{"Title":"Kill Runar", "Description":"Use Your Cards And Kill His Minions To Then Kill Runar","CompletionTrigger":"EnemyAvatar.Card.Health<=0"}
    },
    {
        "Text":"Congratulations Tutorial Done",
        "Sender":"Opponent",
        "GamePause": true,
        "Duration":5,
        "EnemyAi":false,
        "Invoke":"setTimeout(()=>window.location.href='/',5000)"
    }
